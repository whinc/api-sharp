{
  "name": "api-sharp",
  "version": "1.5.3",
  "main": "dist/index.js",
  "module": "dist/api-sharp.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "test:watch": "tsdx test --watch",
    "lint": "tsdx lint",
    "print:coverage": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "coverage": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "clean": "[ -d 'dist' ] && rm -rf dist || echo 'no such directory \"dist\"'",
    "server": "json-server -p 4000 ./server/db.json --middlewares ./server/middleware.js",
    "pm2:server": "pm2 start npm --no-autorestart --name start_server -- run server",
    "debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "optionalDependencies": {
    "prop-types": "^15.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.6.3",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/git": "^7.0.16",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.142",
    "@types/prop-types": "^15.7.3",
    "babel-jest": "^24.9.0",
    "coveralls": "^3.0.6",
    "husky": "^3.0.8",
    "json-server": "^0.15.1",
    "parcel": "^1.12.4",
    "pm2": "^3.5.1",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "prop-types": "^15.7.2",
    "semantic-release": "^15.13.24",
    "ts-node": "^8.4.1",
    "tsdx": "^0.9.3",
    "tslib": "^1.10.0",
    "typescript": "^3.6.3",
    "xhr2": "^0.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/whinc/api-sharp.git"
  },
  "jest": {
    "globals": {
      "__DEV__": true,
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true
        }
      }
    },
    "testMatch": [
      "<rootDir>/test/**/*.test.ts"
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/test/server/",
      "<rootDir>/node_modules/"
    ]
  },
  "dependencies": {
    "core-js": "^3.2.1"
  }
}
